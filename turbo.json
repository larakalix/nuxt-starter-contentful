{
    "$schema": "https://turborepo.com/schema.json",
    "tasks": {
        "gen:exports": {
            "cache": false
        },
        "build": {
            "dependsOn": ["^build", "gen:exports"],
            "inputs": ["$TURBO_DEFAULT$", ".env*"],
            "outputs": [
                ".vercel/**",
                ".nuxt/**",
                ".output/**",
                "dist/**",
                "storybook-static/**"
            ],
            "env": [
                "NUXT_PUBLIC_*",
                "NITRO_*",
                "ASTRO_*",
                "PUBLIC_*",
                "CONTENTFUL_*",
                "DATABASE_URL",
                "JWT_SECRET",
                "JWT_EXPIRES_IN",
                "PORT",
                "VERSION",
                "ENV",
                "NODE_ENV"
            ]
        },
        "lint": {},
        "dev": {
            "cache": false,
            "persistent": true,
            "env": ["NUXT_PUBLIC_*", "ASTRO_*", "PUBLIC_*", "CONTENTFUL_*"]
        }
    }
}
